
@using RamsesEntities.Concrete
@model List<Blog>

<div class="tech-btm">

    @foreach (var item in Model)
    {
        <a href="/Blog/BlogDetail/@item.ID">
            <div class="blog-grids row mb-3">
                <div class="col-md-5 blog-grid-left">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </div>
                <div class="col-md-7 blog-grid-right">
                    <h5>@item.Title</h5>
                    <div class="sub-meta">
                        <span>
                            <i class="far fa-clock"></i> @(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))
                        </span>
                    </div>
                </div>

            </div>
        </a>
    }
</div>