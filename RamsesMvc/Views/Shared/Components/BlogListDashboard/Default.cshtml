@using RamsesEntities.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazarın Son Postları</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>  #</th>
                                <th> Post Başlığı </th>
                                <th> Kategorisi </th>
                                <th> Aktif Mi? </th>
                                <th> Eklenme Tarihi </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" class="mr-2" alt="image">
                                    </td>
                                    <td>@item.Title</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.Name</label>
                                    </td>
                                    <td> @item.IsActive </td>
                                    <td> @(((DateTime)item.CreateDate).ToString("dd MMM yyyy")) </td>
                                    <td>
                                        <a href="/Blog/BlogDetail/@item.ID" class="btn btn-dark btn-sm">
                                            <i class="mdi mdi-information-outline"></i>
                                            Detaylar
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
