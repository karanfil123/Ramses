@using RamsesEntities.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazarın Postları</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Yazı Başlığı </th>
                                <th> Eklenme Tarihi </th>
                                <th> Düzenleme Tarihi </th>
                                <th> Kategori </th>
                                <th> Aktif Mi? </th>
                                <th> Sil</th>
                                <th> Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Title</td>
                                    <td> @(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))</td>
                                    <td> @(((DateTime)item.ModifiedDate).ToString("dd MMM yyyy"))</td>
                                    <td class="badge badge-gradient-success">@item.Category.Name</td>
                                    <td>@item.IsActive</td>
                                    <td><a href="/Writer/DeleteBlog/@item.ID" class="btn btn-outline-danger btn-sm ">Sil</a></td>
                                    <td><a href="/Writer/EditBlog/@item.ID" class="btn btn-primary btn-sm">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/Writer/BlogAdd/" class="btn btn-primary">Yeni Post Oluştur </a>
            </div>
        </div>
    </div>
</div>
