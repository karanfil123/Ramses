@model IEnumerable<RamsesEntities.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<!--//banner-->
<section class="banner-bottom">
    <!--/blog-->
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {


                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a asp-controller="Blog" asp-action="BlogDetail" >
                                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-thumbs-up"></i> 0 Beğeni
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0 Yorum
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            <a asp-controller="Blog" asp-action="BlogDetail">@item.Title </a>
                        </h3>
                        <p>
                            @item.Content
                        </p>
                        <a href="/Blog/Index" class="btn btn-primary read-m">Blog Listesi</a>
                    </div>
                }
                @await Component.InvokeAsync("CommentList",new {id=ViewBag.i })
               
                @await Html.PartialAsync("~/Views/Comment/AddCommentPartial.cshtml")

            </div>

            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <div class="tech-btm">
                        <img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
                    </div>
                    @await Html.PartialAsync("~/Views/Subscribe/AddSubscribe.cshtml")

                    @await Component.InvokeAsync("CategoryList")

                    <h4>Son Eklenen Postlar</h4>
                    <br />
                    @await Component.InvokeAsync("WriterLastBlog")

                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>
<!--//main-->
